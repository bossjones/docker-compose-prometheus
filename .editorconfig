# http://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8
end_of_line = lf

[*.bat]
indent_style = tab
end_of_line = crlf

[LICENSE]
insert_final_newline = false

[Makefile]
indent_style = tab

[Justfile]
indent_style = tab

[*.{md,svg,rb,pp,yaml,yml,xml,j2}]
indent_size = 2

[*.{py,pyi,json}]
max_line_length = 132
indent_size = 4

[*.toml]
max_line_length = 132
indent_size = 2
